@using System.Web.UI.WebControls
@using MyMusicStashWeb.Controllers
@using MyMusicStashWeb.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyMusicStash - Welcome</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <a href="#" class="navbar-brand"><img src="http://i.imgur.com/LNcAPNO.png"></a>
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Session["Username"] != null)
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Songs", "Index", "Song")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Post")</li>
                    <li>@Html.ActionLink("Media", "Index", "Media")</li>
                    <li>@Html.ActionLink("My Account", "Index", "Account")</li>
                    <li>@Html.ActionLink("My Details", "Index", "Person")</li>
                    <ul class="nav navbar-nav navbar-right"><li>@Session["Username"]</li></ul>
                    @*<li class="navbar-right"> <a href="#">@Session["UserID"]</a></li>*@
                    <li><a href='@Url.Action("LogOut", "Account")'>Log Out</a></li>

                }
                else
                {
                <li class="navbar-brand">@Html.ActionLink("MyMusicStash", "Index", "Home")</li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                <li>@Html.ActionLink("Register", "Create", "Account")</li>
                <li>@Html.ActionLink("Activate", "Activate", "Account")</li>
                }
                
                @if (Session["Admin"] != null)
                {
                <li>@Html.ActionLink("All Accounts", "IndexAllAccounts", "Account")</li>
                }
            </ul>

        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - MyMusicStash</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
